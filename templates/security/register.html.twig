
{% extends 'base.html.twig' %} 

{% block title %}Registrar Nova Conta{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen bg-gray-100">
        <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-md">
            <h1 class="text-3xl font-bold text-gray-800 text-center mb-6">Criar Nova Conta</h1>

            {% for message in app.flashes('success') %}
                <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4" role="alert">
                    <p class="font-bold">Sucesso!</p>
                    <p>{{ message }}</p>
                </div>
            {% endfor %}
            {% for message in app.flashes('danger') %}
                <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4" role="alert">
                    <p class="font-bold">Erro!</p>
                    <p>{{ message }}</p>
                </div>
            {% endfor %}

            {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}
                <div>
                    {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(registrationForm.email) }}
                    {{ form_errors(registrationForm.email, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                </div>

                <div>
                    {{ form_label(registrationForm.plainPassword.first, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(registrationForm.plainPassword.first) }}
                    {{ form_errors(registrationForm.plainPassword.first, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                </div>
                <div>
                    {{ form_label(registrationForm.plainPassword.second, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(registrationForm.plainPassword.second) }}
                    {{ form_errors(registrationForm.plainPassword.second, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                    {{ form_errors(registrationForm.plainPassword, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                </div>

                <div class="flex items-center">
                    {{ form_widget(registrationForm.agreeTerms) }}
                    {{ form_label(registrationForm.agreeTerms) }}
                    {{ form_errors(registrationForm.agreeTerms, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                </div>

                <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded-md shadow-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-300 ease-in-out">
                    Registrar
                </button>
            {{ form_end(registrationForm) }}

            <p class="mt-6 text-center text-gray-600 text-sm">
                Já tem uma conta? <a href="{{ path('app_login') }}" class="text-blue-600 hover:underline">Faça login aqui</a>.
            </p>
        </div>
    </div>
{% endblock %}